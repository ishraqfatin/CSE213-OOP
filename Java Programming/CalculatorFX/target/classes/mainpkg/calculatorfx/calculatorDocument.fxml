<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="362.0" prefWidth="360.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mainpkg.calculatorfx.CalculatorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <AnchorPane prefHeight="200.0" prefWidth="200.0">
        <Button layoutX="235.0" layoutY="125.0" mnemonicParsing="false" onAction="#onMULTIPLYButtonClick" text="Multiply" />
        <Button layoutX="130.0" layoutY="125.0" mnemonicParsing="false" onAction="#onSUBTRACTButtonClick" text="Subtract" />
        <Button layoutX="22.0" layoutY="125.0" mnemonicParsing="false" onAction="#onADDButtonClick" prefHeight="25.0" prefWidth="60.0" text="Add" />
        <Label layoutX="52.0" layoutY="23.0" text="X" />
        <Label layoutX="53.0" layoutY="52.0" text="Y" />
        <TextField layoutX="86.0" layoutY="19.0" promptText="Type Here" fx:id="xTextField" />
        <TextField fx:id="yTextField" layoutX="86.0" layoutY="48.0" promptText="Type Here" />
      <TextField fx:id="resultTextField" editable="false" layoutX="86.0" layoutY="161.0" promptText="Result" />
       <Button layoutX="191.0" layoutY="161.0" onAction="#onResetButtonClick" text="Reset" />
    </AnchorPane>
</VBox>
